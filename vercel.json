{
  "version": 2,
  "name": "course_backend",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": ["uploads/**"] 
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}